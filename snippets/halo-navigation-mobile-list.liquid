	                            			</a>
	                            			<div class="menu-lv__dropdownmenu menu-lv__dropdownmenu-2 menu-dropdown">
	                            				<ul class="menu-lv__list list-menu list-unstyled motion-reduce">
	                            					<li class="menu-lv-item menu-lv-3 nav-title-mobile text-center">
						                                <span class="icon-dropdown">
						                                    {% render 'icon-arrow-nav' %}
						                                </span>
						                                <span class="menu-lv-3__action link focus-inset">
						                                    <span class="text">
						                                        {{ childlink.title | escape }}
						                                    </span>
						                                </span>
						                            </li>
						                            <li class="menu-lv-item menu-lv-3 text-left nav-all-mobile">
						                                <a href="{{ childlink.url }}" class="menu-lv-3__action list-menu__item list-menu__item--end link focus-inset">
						                                    <span class="text">
						                                        {{ 'general.navigation.go_to' | t }} {{ childlink.title | escape }}
						                                    </span>
						                                </a>
						                            </li>
						                            {%- for grandchildlink in childlink.links -%}
						                            	<li class="menu-lv-item menu-lv-3 text-left">
						                            		<a href="{{ grandchildlink.url }}" class="menu-lv-3__action list-menu__item list-menu__item--end link focus-inset{% if show_icon %} menu-lv__flex{% endif %}">
						                            			{%- if show_icon -%}
																	{%- liquid
																		if image_type == 'jpg'
															                assign grandchilditem_image = grandchildlink.handle | prepend: menu_handle | handleize | append: '.jpg'
															            else
															                assign grandchilditem_image = grandchildlink.handle | prepend: menu_handle | handleize |append: '.png'
															            endif
																	-%}
																	{%- if images[grandchilditem_image] != blank -%}
																		<span class="custom-icon style-{{ image_style }}">
																			{% assign image = grandchilditem_image | file_url %}
																			<img src="{{ grandchilditem_image | file_url }}" alt="{{ shop.name | escape }}">
																		</span>
																	{%- endif -%}
																{%- endif -%}
						                            			<span class="text">
						                                            {{ grandchildlink.title | escape }}
						                                        </span>
						                            		</a>
						                            	</li>
						                            {%- endfor -%}
						                        </ul>
	                            			</div>
	                            		{%- endif -%}
	                            	</li>
	                            {%- endfor -%}
							</ul>
						</div>
					{%- endif -%}
				{%- endif -%}
			</li>
		{%- endfor -%}
	</ul>
</div>