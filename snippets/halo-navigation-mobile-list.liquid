	                                    {% render 'icon-arrow-nav' %}
	                                </span>
	                                <span class="menu-lv-3__action link focus-inset">
	                                    <span class="text">
	                                        {{ link.title | escape }}
	                                    </span>
	                                </span>
	                            </li>
								{% if show_banner %}
									<a href="javascript:void(0)" class="image-zoom adaptive_height" style="padding-top: {{ 1 | divided_by: banner_lv_3.aspect_ratio | times: 100 }}%;">
										<img {% render 'lazyload',preview_img: banner_lv_3 %} />
										{% if settings.enable_lazyload %}<span class="data-lazy-loading"></span>{% endif %}
									</a>	
								{% endif %}
								{% if show_nav_all %}
									<li class="menu-lv-item menu-lv-3 text-left nav-all-mobile">
										<a href="{{ link.url }}" class="menu-lv-3__action list-menu__item list-menu__item--end link focus-inset">
											<span class="text">
												{{ 'general.navigation.go_to' | t }} {{ link.title | escape }}
											</span>
										</a>
									</li>
								{% endif %}
	                            {%- for childlink in link.links -%}
	                            	<li class="menu-lv-item menu-lv-3 text-left{% if childlink.links != blank %} dropdown{% endif %}">
	                            		{%- if childlink.links == blank -%}
	                            			<a href="{{ childlink.url }}" class="menu-lv-3__action list-menu__item list-menu__item--end link focus-inset{% if show_icon %} menu-lv__flex{% endif %}">
	                            				{%- if show_icon -%}
													{%- liquid
														if image_type == 'jpg'
											                assign childitem_image = childlink.handle | prepend: menu_handle | handleize | append: '.jpg'
											            else
											                assign childitem_image = childlink.handle | prepend: menu_handle | handleize |append: '.png'
											            endif
													-%}
													{%- if images[childitem_image] != blank -%}
														<span class="custom-icon style-{{ image_style }}">
															{% assign image = childitem_image | file_url %}
															<img src="{{ image }}" alt="{{ shop.name | escape }}">
														</span>
													{%- endif -%}
												{%- endif -%}
	                            				<span class="text">
		                                            {{ childlink.title | escape }}
		                                        </span>
	                            			</a>
	                            		{%- else -%}
	                            			<a href="{{ childlink.url }}" class="menu-lv-3__action link list-menu__item focus-inset{% if show_icon %} menu-lv__flex{% endif %} menu_mobile_link">
	                            				{%- if show_icon -%}
