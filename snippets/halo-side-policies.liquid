{%- if block.settings.show_block -%}
    {%- liquid
        assign heading = block.settings.heading
        assign icon_type = block.settings.icon_type
        assign icon_width = block.settings.icon_width
        assign icon_height = block.settings.icon_height
        assign icon_mg_right = block.settings.icon_mg_right

        assign show_item_1 = block.settings.show_item_1
        assign image_1 = block.settings.image_1
        assign icon_1 = block.settings.icon_1
        assign text_1 = block.settings.text_1
        assign description_1 = block.settings.description_1
        assign button_1 = block.settings.button_1
        assign link_1 = block.settings.link_1

        assign show_item_2 = block.settings.show_item_2
        assign image_2 = block.settings.image_2
        assign icon_2 = block.settings.icon_2
        assign text_2 = block.settings.text_2
        assign description_2 = block.settings.description_2
        assign button_2 = block.settings.button_2
        assign link_2 = block.settings.link_2

        assign show_item_3 = block.settings.show_item_3
        assign image_3 = block.settings.image_3
        assign icon_3 = block.settings.icon_3
        assign text_3 = block.settings.text_3
        assign description_3 = block.settings.description_3
        assign button_3 = block.settings.button_3
        assign link_3 = block.settings.link_3
        
    -%}
    <style>
    	.sidebarBlock-content .policies-block .halo-item .policies-icon {margin-right: {{ icon_mg_right | append: 'px' }}}
    	.sidebarBlock-content .policies-block .halo-item .policies-icon svg {width: var(--icon-width-style);height: var(--icon-height-style);position: relative;top: -2px}
        .sidebarBlock-content .policies-block .policies-text {font-size: var(--font-size-text-style); font-weight: var(--font-weight-text-style)}
    </style>
    <div class="sidebarBlock sidebar-policies{% if show_collapse %} sidebarBlock-collapse{% endif %}">
        {%- if show_collapse -%}
            <div class="sidebarBlock-headingWrapper">
        {%- endif -%}
            {%- if heading != blank -%}
                <h2 class="sidebarBlock-heading{% if show_collapse %}{% if sidebar_collapse == 'expand' %} is-clicked{% endif %}{% endif %}">{{ heading | escape }}</h2>
            {%- else -%}
                {%- if show_collapse -%}
                    <h2 class="sidebarBlock-heading{% if sidebar_collapse == 'expand' %} is-clicked{% endif %}">BLock Heading</h2>
                {%- endif -%}
            {%- endif -%}
        {%- if show_collapse -%}
            </div>
            <div class="sidebarBlock-contentWrapper" {% if sidebar_collapse == 'expand' %} style="display: block;"{% endif %}>
        {%- endif -%}
            <div class="sidebarBlock-content">
                <div class="policies-block">
                    {%- if show_item_1 -%}
            		<div class="halo-item{% if description_1 != blank %} has-des{% endif %}">
            			{%- if button_1 == blank and link_1 != blank -%}
            			<a {% if link_1 == blank %} role="link" aria-disabled="true"{% else %} href="{{ link_1 }}"{% endif %} title="{{text_1}}">
            			{%- endif -%}
            				{%- if icon_type == 'image' -%}
                                {%- if image_1 != blank -%}
                                    {%- assign preview_img = image_1 -%}
                                    <img {% render 'lazyload',preview_img: preview_img  %} />
                                {%- endif -%}
                            {%- else -%}
                                {%- if icon_1 != blank -%}
                                <span class="policies-icon" style="--icon-width-style: {{ icon_width | append: 'px' }}; --icon-height-style: {{ icon_height | append: 'px' }}; --icon-mg-right-style: {{ icon_mg_right | append: 'px' }}">
                                  {{ icon_1 }}
                                </span>
                                {%- endif -%}
                            {%- endif -%}

                            {%- if text_1 != blank or  description_1 != blank or button_1 != blank -%}
                            <div class="policies-content">
                                {%- if text_1 != blank -%}
                                <span class="policies-text" style="--font-size-text-style: {{ block.settings.font_size_text | append: 'px' }};--font-weight-text-style: {{ block.settings.font_weight_text }}">{{text_1}}</span>
                                {%- endif -%}
                                {%- if description_1 != blank -%}
	                                <p class="policies-des">{{description_1}}</p>
                                {%- endif -%}
                                {%- if button_1 != blank -%}
                                    <a class="more_btn"{% if link_1 == blank %} role="link" aria-disabled="true"{% else %} href="{{ link_1 }}"{% endif %} title="{{button_1}}">{{button_1}}</a>
                                {%- endif -%}
                            </div>
                            {%- endif -%}
            			{%- if button_1 == blank and link_1 != blank -%}
            			</a>
            			{%- endif -%}
            		</div>
                    {%- endif -%}

                    {%- if show_item_2 -%}
                    <div class="halo-item{% if description_2 != blank %} has-des{% endif %}">
                        {%- if button_2 == blank and link_2 != blank -%}
                        <a {% if link_2 == blank %} role="link" aria-disabled="true"{% else %} href="{{ link_2 }}"{% endif %} title="{{text_2}}">
                        {%- endif -%}
                            {%- if icon_type == 'image' -%}
                                {%- if image_2 != blank -%}
                                    {%- assign preview_img = image_2 -%}
                                    <img {% render 'lazyload',preview_img: preview_img  %} />
                                {%- endif -%}
                            {%- else -%}
                                {%- if icon_2 != blank -%}
                                <span class="policies-icon" style="--icon-width-style: {{ icon_width | append: 'px' }}; --icon-height-style: {{ icon_height | append: 'px' }}; --icon-mg-right-style: {{ icon_mg_right | append: 'px' }}">{{ icon_2 }}</span>
                                {%- endif -%}
                            {%- endif -%}

                            {%- if text_2 != blank or  description_2 != blank or button_2 != blank -%}
                            <div class="policies-content">
                                {%- if text_2 != blank -%}
                                <span class="policies-text" style="--font-size-text-style: {{ block.settings.font_size_text | append: 'px' }};--font-weight-text-style: {{ block.settings.font_weight_text }}">{{text_2}}</span>
                                {%- endif -%}
                                {%- if description_2 != blank -%}
                                    <p class="policies-des">{{description_2}}</p>
                                {%- endif -%}
                                {%- if button_2 != blank -%}
                                    <a class="more_btn"{% if link_2 == blank %} role="link" aria-disabled="true"{% else %} href="{{ link_2 }}"{% endif %} title="{{button_2}}">{{button_2}}</a>
                                {%- endif -%}
                            </div>
                            {%- endif -%}
                                                        
                        {%- if button_2 == blank and link_2 != blank -%}
                        </a>
                        {%- endif -%}
                    </div>
                    {%- endif -%}

                    {%- if show_item_3 -%}
                        <div class="halo-item{% if description_3 != blank %} has-des{% endif %}">
                            {%- if button_3 == blank and link_3 != blank -%}
                            <a {% if link_3 == blank %} role="link" aria-disabled="true"{% else %} href="{{ link_3 }}"{% endif %} title="{{ text_3 }}">
                            {%- endif -%}
                                {%- if icon_type == 'image' -%}
                                    {%- if image_3 != blank -%}
                                        {%- assign preview_img = image_3 -%}
                                        <img {% render 'lazyload',preview_img: preview_img  %} />
                                    {%- endif -%}
                                {%- else -%}
                                    {%- if icon_3 != blank -%}
                                    <span class="policies-icon" style="--icon-width-style: {{ icon_width | append: 'px' }}; --icon-height-style: {{ icon_height | append: 'px' }}; --icon-mg-right-style: {{ icon_mg_right | append: 'px' }}">{{ icon_3 }}</span>
                                    {%- endif -%}
                                {%- endif -%}
                                {%- if text_3 != blank or  description_3 != blank or button_3 != blank -%}
                                <div class="policies-content">
                                    {%- if text_3 != blank -%}
                                    <span class="policies-text" style="--font-size-text-style: {{ block.settings.font_size_text | append: 'px' }};--font-weight-text-style: {{ block.settings.font_weight_text }}">{{text_3}}</span>
                                    {%- endif -%}
                                    {%- if description_3 != blank -%}
                                        <p class="policies-des">{{description_3}}</p>
                                    {%- endif -%}
                                    {%- if button_3 != blank -%}
                                        <a class="more_btn"{% if link_3 == blank %} role="link" aria-disabled="true"{% else %} href="{{ link_3 }}"{% endif %} title="{{button_3}}">{{button_3}}</a>    
                                    {%- endif -%}
                                </div>
                                {%- endif -%}         
                            {%- if button_3 == blank and link_3 != blank -%}
                            </a>
                            {%- endif -%}
                        </div>
                    {%- endif -%}
               	</div>
            </div>
        {%- if show_collapse -%}
            </div>
        {%- endif -%}
    </div>
{%- endif -%}