{%- if settings.enable_layout_rtl -%}
    {% style %}
        @media (min-width: 1025px) {
            .layout_rtl .header-top--wrapper .header-advanced__customText {margin-left: 25px;margin-right: 0;text-align: right}
            .layout_rtl .header-top--wrapper .header-top--right .header__icon+.header__icon {margin-left: 0;margin-right: 35px}
            .layout_rtl .header-bottom--wrapper .header-bottom-right .help-item {margin-right: 0;padding-right: 0;margin-left: 14px;padding-left: 20px}
            .layout_rtl .header-bottom--wrapper .header-bottom-right .help-item:before {right: auto;left: 0}
            .layout_rtl .top-language-currency.enable-currency .halo-top-language .disclosure__button .text {margin-right: 10px;margin-left: 0}
            .layout_rtl .top-language-currency .halo-top-language+.halo-top-currency:before {left: auto;right: 0}
            .layout_rtl .top-language-currency .halo-top-language .disclosure__button {padding-left: 0}
            .layout_rtl .top-language-currency .halo-top-language+.halo-top-currency {margin-left: 0;margin-right: 2px;padding-left: 0;padding-right: 8px}
            .layout_rtl .header__group .header__icon--cart svg {margin-left: 0}
            .layout_rtl .header-top--wrapper .quickSearchResultsWrap {left: auto;right: 0}
            .layout_rtl .header-language_currency .top-language-currency.enable-currency .dropdown-language {left: 42px;right: auto}
            .layout_rtl .header-language_currency .top-language-currency .dropdown-currency,
            .layout_rtl .header-language_currency .top-language-currency.show .dropdown-currency{right: auto;left: 0}
        }
        @media (min-width: 1441px) {
            .layout_rtl .header-top--wrapper .header-advanced__customText {margin-left: 50px}
        }
    {% endstyle %}
{%- endif -%}

<header class="header header-advanced header-advanced--{{ section.settings.layout }}" style="--bor-top-color: {% if section.settings.border_top != blank and section.settings.border_top != 'rgba(0,0,0,0)' %}5px solid {{ section.settings.border_top }}{% else %}none{% endif %}">
    {%- for block in section.blocks -%}
        <div class="header-advanced__item{% if block.type == 'group_2' %} header-advanced__logo-position--{{ block.settings.logo_position }}{% endif %}" style="--bg-color: {% if block.settings.gradient != blank %}{{ block.settings.gradient }}{% else %}{{ block.settings.background }}{% endif %}; --spacing-l-r: {{ block.settings.padding_full_width }}px; --padding-top: {{ block.settings.padding_top }}px; --padding-bottom: {{ block.settings.padding_bottom }}px;{% if block.type == 'group_2' %} --logo-width: {{ block.settings.logo_width }}px{% endif %}">
            <div class="container container-{{ block.settings.container }}">
                <div class="header-advanced__content">
                    {%- case block.type -%}
                        {%-  when 'group_1' -%}
                            {%- if block.settings.custom_text_1 != blank or block.settings.custom_text_2 != blank -%}
                                <div class="header-advanced__col">
                                    {%- if block.settings.custom_text_1 != blank -%}
                                        <div class="header-advanced__customText" style="--text-size: {{ block.settings.text_size_1 }}px; --text-color: {{ block.settings.color_1 }}">
                                            {%- case block.settings.icon_1 -%}
                                                {%-  when '1' -%}
                                                    {% render 'icon-phone-2' %}
                                                {%-  when '2' -%}
                                                    {% render 'icon-mobile-phone' %}
                                                {%-  when '3' -%}
                                                    {% render 'icon-phone' %}
                                            {%- endcase -%}
                                            {{ block.settings.custom_text_1 }}
                                        </div>
                                    {%- endif -%}
                                    {%- if block.settings.custom_text_2 != blank -%}
                                        <div class="header-advanced__customText" style="--text-size: {{ block.settings.text_size_2 }}px; --text-color: {{ block.settings.color_2 }}">
                                            {%- case block.settings.icon_2 -%}
                                                {%-  when '1' -%}
                                                    {% render 'icon-mail-3' %}
                                                {%-  when '2' -%}
                                                    {% render 'icon-mail-2' %}
                                                {%-  when '3' -%}
                                                    {% render 'icon-mail-1' %}
                                            {%- endcase -%}
                                            {{ block.settings.custom_text_2 }}
                                        </div>
                                    {%- endif -%}
                                </div>
                            {%- endif -%}
                            {%- if block.settings.custom_text_3 != blank -%}
                                <div class="header-advanced__col">
                                    <div class="header-advanced__customText" style="--text-size: {{ block.settings.text_size_3 }}px; --text-color: {{ block.settings.color_3 }}">
                                        {{ block.settings.custom_text_3 }}
                                    </div>
                                </div>
                            {%- endif -%}
                            {%- if block.settings.custom_text_4 != blank or block.settings.show_language_currency -%}
                                <div class="header-advanced__col">
                                    {%- if block.settings.custom_text_4 != blank -%}
                                        <div class="header-advanced__customText" style="--text-size: {{ block.settings.text_size_4 }}px; --text-color: {{ block.settings.color_4 }}">
                                            {{ block.settings.custom_text_4 }}
                                        </div>
                                    {%- endif -%}
                                    {%- if block.settings.show_language_currency -%}
                                        <div class="header-advanced__lanCur" style="--lan-cur-color: {{ block.settings.language_currency_color }}">
                                            <div class="header-language_currency">
                                                <div class="top-language-currency{% if settings.enable_currencies %} enable-currency{% endif %}">
                                                    {%- if settings.enable_multilang_shopify -%}
                                                        {% render 'halo-top-language' %}
                                                    {%- endif -%}
                                                    {%- if settings.enable_currencies -%}
                                                        {% render 'halo-top-currency' %}
                                                    {%- endif -%}
                                                </div>
                                            </div>
                                        </div>
                                    {%- endif -%}
                                </div>
                            {%- endif -%}
                        {%-  when 'group_2' -%}
                            {%- if block.settings.show_logo -%}
                                <div class="header__logo text-left clearfix{% if block.settings.logo != blank %} has-logo{% endif %}" style="--logo-font-size: {{ block.settings.logo_font_size }}px; --logo-font-weight: {{ block.settings.logo_font_weight }}; --logo-color: {{ block.settings.logo_color }}">
                                    <div class="header__heading">
                                        <a href="{{ routes.root_url }}" class="header__heading-link focus-inset">
                                            {%- if block.settings.logo != blank -%}
                                                {%- liquid 
                                                    assign logo = block.settings.logo
                                                    assign logo_width = block.settings.logo_width
                                                    assign logo_height = logo_width | divided_by: logo.aspect_ratio | round
                                                    assign logo_alt = logo.alt | default: shop.name | escape
                                                -%}
                                                {{ logo | image_url: width: 300 | image_tag:
                                                    class: 'header__heading-logo motion-reduce',
                                                    widths: '50, 100, 150, 200, 250, 300, 400, 500',
                                                    height: logo_height,
                                                    width: logo_width,
                                                    alt: logo_alt
                                                }}
                                            {%- else -%}
                                                <span class="h2 {{ block.settings.logo_text_transform }}">{% if block.settings.logo_text != blank %}{{ block.settings.logo_text }}{% else %}{{ shop.name }}{% endif %}</span>
                                            {%- endif -%}
                                        </a>
                                    </div>
                                </div>
                            {%- endif -%}
                            {%- if block.settings.show_search -%}
                                <div class="header__search clearfix{% if block.settings.show_box_shadow %} show-box-shadow{% endif %}" style="--bg-search-color: {{ block.settings.bg_search_color }}; --search-color: {{ block.settings.search_color }}; --search-icon-color: {{ block.settings.search_icon_color }}; --search-icon-bg: {% if block.settings.search_icon_gradient != blank %}{{ block.settings.search_icon_gradient }}{% else %}{{ block.settings.search_icon_bg }}{% endif %}; --search-border-radius: {{ block.settings.search_border_radius }}px">
                                    <details-modal class="header__iconItem header__search">
                                        {%- if settings.show_quick_search -%}
                                            <predictive-search class="search-modal__form" data-loading-text="{{ 'accessibility.loading' | t }}" data-product-to-show="{{ settings.quick_search_to_show }}">
                                        {%- endif -%}
                                        <details class="search_details">
                                            <summary class="header__search-full" aria-haspopup="dialog" aria-label="{{ 'general.search.search' | t }}">
                                                <button type="button" class="header-search-close" aria-label="{{ 'general.common.close' | t }}">
                                                    {% render 'icon-close' %}
                                                </button>
                                                <form action="{{ routes.search_url }}" method="get" role="search" class="search search-modal__form">
                                                    <div class="field">
                                                        <input class="search__input field__input form-input-placeholder" id="Search-In-Modal-Advanced" type="search" name="q" value="{{ search.terms | escape }}" placeholder="{{ 'general.search.search_the_store' | t }}" autocomplete="off" {%- if settings.show_quick_search -%}role="combobox" aria-expanded="false" aria-owns="predictive-search-results-list" aria-controls="predictive-search-results-list" aria-haspopup="listbox" aria-autocomplete="list" autocorrect="off" autocomplete="off" autocapitalize="off" spellcheck="false"{%- endif -%}>
                                                        <input type="hidden" name="options[prefix]" value="last">
                                                        <input type="hidden" name="type" value="product">
                                                        <label class="field__label hiddenLabels" for="Search-In-Modal-Advanced">{{ 'general.search.search_the_store' | t }}</label>
                                                        <button class="button search__button field__button focus-inset" aria-label="{{ 'general.search.search' | t }}">{% render 'icon-search-02' %}</button>
                                                    </div>
                                                    {%- if settings.show_quick_search -%}
                                                        {%- if settings.show_search_trending or settings.show_search_product -%}
                                                            {%- render 'quick-searching-trending-products' -%}
                                                        {%- endif -%}
                                                        {%- render 'predictive-search-results' -%}
                                                    {%- endif -%}
                                                </form>
                                            </summary>
                                            <div class="search-modal modal__content{% if settings.show_quick_search %} quickSearch{% endif %}" role="dialog" aria-modal="true" aria-label="{{ 'general.search.search' | t }}">
                                                {%- if settings.show_quick_search -%}
                                                    {% render 'halo-quick-search' %}
                                                {%- endif -%}
                                            </div>
                                        </details>
                                        {%- if settings.show_quick_search -%}
                                            </predictive-search>
                                        {%- endif -%}
                                    </details-modal>
                                </div>
                            {%- endif -%}
                            {%- if block.settings.show_cart or block.settings.show_wishlist or block.settings.show_account -%}
                                <div class="header-advanced-icons">
                                    {%- if block.settings.show_cart -%}
                                        <div class="header__iconItem header__group header-advanced-cart" style="--color: {{ block.settings.cart_color }}; --cart-bg-item: {{ block.settings.cart_bg_item }}; --cart-color-item: {{ block.settings.cart_color_item }}; --cart-item-font-size: {{ block.settings.cart_item_font_size }}px">
                                            <a href="{{ routes.cart_url }}" class="header__icon header__icon--cart link link--text focus-inset cart-icon-bubble"{% if settings.show_quick_cart %} data-cart-sidebar{% endif %}>
                                                {% render 'icon-cart-03' %}
                                                <div class="header-advanced-textRight">
                                                    <div class="cart-count-bubble">
                                                        {%- if cart.item_count < 100 -%}
                                                            <span class="text" aria-hidden="true" data-cart-count>{{ cart.item_count }}</span>
                                                        {%- endif -%}
                                                        <span class="visually-hidden">{{ 'sections.header.cart_count' | t: count: cart.item_count }}</span>
                                                    </div>
                                                    <span class="cart-text">{{ 'general.cart.cart' | t }}</span>
                                                </div>
                                            </a>
                                        </div>
                                    {%- endif -%}
                                    {%- if settings.show_wishlist and block.settings.show_wishlist -%}
                                        <div class="header__iconItem header__group header-advanced-wishlist" style="--color: {{ block.settings.wishlist_color }}">
                                            <a href="{{ pages['wish-list'].url }}" class="header__icon header__icon--wishlist link link--text focus-inset">{% render 'icon-heart-2' %} <span class="wishlist-text">{{ 'wishlist.general.wishlist' | t }}</span></a>
                                        </div>
                                    {%- endif -%}
                                    {%- if block.settings.show_account -%}
                                        <div class="header__iconItem header__group header-advanced-account" style="--color: {{ block.settings.customer_color }}">
                                            {%- if shop.customer_accounts_enabled -%}
                                                {% if routes.account_login_url contains '/account/login' %}
                                                    {% assign is_contained = true %}
                                                {% else %}
                                                    {% assign is_contained = false %}
                                                {% endif %}
                                                {%- if section.settings.layout == 'style2' -%}
                                                    <a href="{{ routes.account_login_url }}" class="header__icon header__icon--account link link--text"{% if is_contained %} data-open-auth-sidebar{% endif %}>
                                                        {% render 'icon-account-2' %}
                                                        <div class="header-advanced-textRight">
                                                            <span class="hello">{{ 'customer.hello' | t }}</span>
                                                            <span class="header-advanced-text">
                                                                {%- liquid
                                                                    if customer
                                                                        echo 'customer.account_fallback' | t
                                                                    else
                                                                        echo 'customer.sign_in' | t
                                                                    endif
                                                                -%}
                                                            </span>
                                                        </div>
                                                    </a>
                                                {%- else -%}
                                                    <div class="header__icon header__icon--account link link--text">
                                                        <a href="{{ routes.account_login_url }}"{% if is_contained %} data-open-auth-sidebar{% endif %}>{% render 'icon-account-2' %}</a>
                                                        <div class="header-advanced-textRight">
                                                            {% if customer %}
                                                                <a class="header__link--account" id="customer_logout_link" href="{{ routes.account_logout_url }}">{{ 'customer.log_out' | t }}</a>
                                                                <span> / </span>
                                                                <a class="header__link--account" href="{{ routes.account_url }}">{{ 'customer.account.my_account' | t }}</a>
                                                            {% else %}  
                                                                <div class="header-advanced__link--account">
                                                                    <a class="header__link--account" id="customer_login_link" href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}"{% if is_contained %} data-open-auth-sidebar{% endif %}>{{ 'customer.login_page.title' | t }}</a>
                                                                    <span class="or-text">{{ 'customer.or' | t }}</span>
                                                                    <a class="header__link--account" id="customer_register_link" href="{{ routes.account_register_url }}">{{ 'customer.login_page.register' | t }}</a>
                                                                </div>
                                                                <div class="header-advanced-text">{{ 'customer.my_account' | t }}</div>
                                                            {% endif %}
                                                        </div>  
                                                    </div>
                                                {%- endif -%}                   
                                            {%- endif -%}
                                        </div>
                                    {%- endif -%}
                                </div>
                            {%- endif -%}
                    {%- endcase -%}
                </div>
            </div>
        </div>
    {%- endfor -%}
</header>

