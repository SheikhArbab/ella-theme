                                        {%-  when '1' -%}
                                            {% render 'icon-cart-05' %}
                                        {%-  when '2' -%}
                                            {% render 'icon-cart-02' %}
                                        {%-  when '3' -%}
                                            {% render 'icon-cart-06' %}
                                        {%-  when '4' -%}
                                            {% render 'icon-cart-04' %}
                                        {%-  when '5' -%}
                                            {% render 'icon-cart-03' %}
                                        {%-  when '6' -%}
