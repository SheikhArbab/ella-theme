    {%- endif -%}

    {%- if section_gradient != blank and section_gradient != 'rgba(0,0,0,0)' -%}
        .section-block-{{section.id}} {background: {{ section_gradient }}}
    {%- elsif section_bg != blank and section_bg != 'rgba(0,0,0,0)' -%}
