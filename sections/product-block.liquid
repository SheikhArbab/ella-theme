    .section-block-{{section.id}} .products-flex {display: flex;flex-direction: row;flex-wrap: nowrap;user-select: none;padding-bottom: 45px;overflow: auto;overflow-y: clip;gap: {{section.settings.grid_gap | append: 'px'}};padding-right: 60px}
    .layout_rtl .section-block-{{section.id}} .products-flex {padding-left: 60px;padding-right: 0;}
    .section-block-{{section.id}} .halo-product-block .products-flex .product {flex-shrink: 0;flex-grow: 0;padding: 0;}
    .section-block-{{section.id}} .halo-block-content.is-scroll {overflow: hidden}
    .section-block-{{section.id}} .products-flex::-webkit-scrollbar {height: var(--scrollbar-height, 3px);cursor: pointer}
    .section-block-{{section.id}} .products-flex::-webkit-scrollbar-track {background: var(--scrollbar-track-color, #dadada)}
    .section-block-{{section.id}} .products-flex::-webkit-scrollbar-thumb {background: var(--scrollbar-thumb-color, #000)}
    .section-block-{{section.id}} .products-flex::-webkit-scrollbar-thumb:hover {background: var(--scrollbar-thumb-hover-color, #333)}
    .section-block-{{section.id}} .products-flex.active .product {pointer-events: none}
    /* End: Scroll Layout */
    @media (max-width: 1024px) {
        .section-block-{{section.id}} .halo-block-header .title {
            {%- if section.settings.view_all != blank -%}
            margin-bottom: 10px;
            {%- endif -%}
            {%- if fontsize_title > 30 -%}
            font-size: {{ fontsize_title | plus: fontsize_title_mb | divided_by: 2 | append: 'px'  }};
            {%- endif -%}
        }
        {%- if product_bg_image != blank -%}
            .section-block-{{section.id}}{background-position: center top}
        {%- endif -%}
        {%- if section.settings.disable_padding_content -%}
            .section-block-{{section.id}} .container-full .halo-block-header{padding-left: 15px;padding-right: 15px}
            .section-block-{{section.id}} .container-full .halo-block-content{padding-left: 15px}
            .section-block-{{section.id}} .products-flex::-webkit-scrollbar {height: var(--scrollbar-height, 3px);cursor: pointer}
            .layout_rtl .section-block-{{section.id}} .container-full .halo-block-content{padding-right: 15px;padding-left: 0}
            .section-block-{{section.id}} .products-flex {padding-right: 15px}
        {%- endif -%}
        .section-block-{{ section.id }} .products-flex {--count: 2!important;gap: 15px}
        .section-block-{{ section.id }} .products-flex .product {padding: 0 7px}
        .section-block-{{section.id}} .products-flex {scroll-snap-type: x mandatory;padding-bottom: 0}
