{%- liquid
    assign as_grid_gap = section.settings.grid_gap
    assign grid_gap = section.settings.grid_gap | times: 0.5 | append: 'px'

    assign container = section.settings.container
    assign collection = section.settings.product_block_collection
    assign limit = section.settings.product_block_limit
    assign layout = section.settings.product_block_layout
    assign infinite_scroll = section.settings.product_block_infinite_scroll

    assign block_title = section.settings.product_block_title
    assign block_title_align = section.settings.title_align
    assign image_ratio = settings.product_block_image_ratio
    assign swipe_on_mobile = section.settings.product_block_swipe_on_mobile

    assign products_to_display = 0
    if collections[collection].handle != ''
        if collections[collection].all_products_count > limit
            assign products_to_display = limit
        else
            assign products_to_display = collections[collection].all_products_count
        endif 
    else
        assign products_to_display = limit
    endif

    assign swipe = false
    if swipe_on_mobile == true and layout == 'grid' and products_to_display > 2
        assign swipe = true
    endif

    assign block_banners = section.blocks | where: 'type', 'banner'
    assign block_banner = block_banners[0]
    assign show_banner = false
    if block_banner != blank
        assign show_banner = true
    endif

    assign countdown = section.settings.countdown
    
    assign product_bg = section.settings.product_bg
    assign product_bg_gradient = section.settings.product_bg_gradient
    assign product_bg_image = section.settings.product_bg_image

    assign color_title = section.settings.color_title
    assign border_color_title = section.settings.border_color_title
    assign pd_top_title = section.settings.pd_top_title
    assign fontsize_title = section.settings.fontsize_title
    assign fontsize_title_mb = section.settings.fontsize_title_mb
    assign product_button_width = section.settings.product_button_width
    assign pd_top_product_button = section.settings.pd_top_product_button
    assign pd_bottom_product_button = section.settings.pd_bottom_product_button

    assign mg_bottom_title = section.settings.mg_bottom_title
    assign mg_bottom_title_mb = section.settings.mg_bottom_title_mb
    assign mg_bottom_view = section.settings.mg_bottom_view
    assign mg_bottom_view_mb = section.settings.mg_bottom_view_mb

    assign color_view_all = section.settings.color_view_all
    assign color_view_all_icon = section.settings.color_view_all_icon
    assign font_weight_view_all = section.settings.font_weight_view_all

    assign color_button = section.settings.color_button
    assign bg_color_button = section.settings.bg_color_button
    assign border_color_button = section.settings.border_color_button
    assign bg_color_gradient_button = section.settings.bg_color_gradient_button

    assign color_button_hover = section.settings.color_button_hover
    assign bg_color_button_hover = section.settings.bg_color_button_hover
    assign border_color_button_hover = section.settings.border_color_button_hover
    assign bg_color_gradient_button_hover = section.settings.bg_color_gradient_button_hover

    assign mg_top_desktop = section.settings.mg_top_desktop
    assign mg_top_tablet = section.settings.mg_top_tablet
    assign mg_top_mobile = section.settings.mg_top_mobile

    assign mg_bottom_desktop = section.settings.mg_bottom_desktop
    assign mg_bottom_tablet = section.settings.mg_bottom_tablet
    assign mg_bottom_mobile = section.settings.mg_bottom_mobile

    assign spacing_top_dots = section.settings.spacing_top_dots

    assign padding_full_width = section.settings.padding_full_width

    assign mg_bottom_button = section.settings.mg_bottom_button
    assign enable_border_top = section.settings.enable_border_top
    assign enable_border_bottom = section.settings.enable_border_bottom
    assign color_border_bottom = section.settings.color_border_bottom
    assign border_height = section.settings.border_height

    assign button_text_font_size = section.settings.button_text_font_size
    assign button_text_font_weight = section.settings.button_text_font_weight
    assign button_text_text_transform = section.settings.button_text_text_transform

    assign collection_color = section.settings.collection_color
    assign collection_color_hover = section.settings.collection_color_hover
    assign collection_bg_color = section.settings.collection_bg_color
    assign collection_bg_color_gradient = section.settings.collection_bg_color_gradient

    assign position_vertical_arrow = section.settings.position_vertical_arrow

    if show_banner
        assign fontsize_text = block_banner.settings.fontsize_text
        assign fontsize_text_mb = block_banner.settings.fontsize_text_mb
        assign color_text = block_banner.settings.color_text
        assign mg_bottom_text = block_banner.settings.mg_bottom_text

        assign fontsize_sub_text = block_banner.settings.fontsize_sub_text
        assign fontsize_sub_text_mb = block_banner.settings.fontsize_sub_text_mb
        assign color_sub_text = block_banner.settings.color_sub_text
        assign mg_bottom_sub_text = block_banner.settings.mg_bottom_sub_text

        assign fontsize_description = block_banner.settings.fontsize_description
        assign color_description = block_banner.settings.color_description
        
        assign banner_border_radius = block_banner.settings.banner_border_radius

        assign button_bg_color = block_banner.settings.button_bg_color
        assign button_color = block_banner.settings.button_color
        assign button_border_color = block_banner.settings.button_border_color
        assign button_bg_color_gradient = block_banner.settings.button_bg_color_gradient

        assign button_bg_color_hover = block_banner.settings.button_bg_color_hover
        assign button_color_hover = block_banner.settings.button_color_hover
        assign button_border_color_hover = block_banner.settings.button_border_color_hover
        assign button_bg_color_gradient_hover = block_banner.settings.button_bg_color_gradient_hover
    endif

    if section.settings.enable_layout_special
        assign bg_card = section.settings.bg_card
        assign padding_card = section.settings.padding_card
        assign border_radius_card = section.settings.border_radius_card
        assign border_width_card = section.settings.border_width_card
        assign border_color_card = section.settings.border_color_card
    endif

    if section.settings.countdown
        assign color_countdown = section.settings.color_countdown
        assign font_size_countdown_text = section.settings.font_size_countdown_text
        assign countdown_margin_left = section.settings.countdown_margin_left
    endif

    assign enable_pd_bottom = section.settings.enable_product_card_pd_bottom
    assign pd_bottom = section.settings.product_card_pd_bottom

    assign enable_minus_mg_top = section.settings.enable_minus_mg_top
    assign minus_spacing_top = section.settings.minus_spacing_top | append: 'px'
    assign show_half = section.settings.show_half
-%}

<style>
    {%- if section.settings.countdown -%}
         {%- if section.settings.style_countdown == 'style_2' -%}
            .section-block-{{section.id}} .clock-item .num {background: {{ color_countdown }}}
            .section-block-{{section.id}} .clock-item .icon {color: {{ color_countdown }}}
        {%- endif -%} 
        .section-block-{{section.id}} .product-countdown-block {color: {{ color_countdown }};margin-{%- if section.settings.style_block_header == 'style1' -%}bottom{%- else -%}left{%- endif  %}: {{ countdown_margin_left | append: 'px' }}}
        .layout_rtl .section-block-{{section.id}} .product-countdown-block {margin-{%- if section.settings.style_block_header == 'style1' -%}bottom{%- else -%}
                    right{%- endif  %}: {{ countdown_margin_left | append: 'px' }};margin-left: 0}
        {%- if section.settings.style_block_header == 'style1' -%}
        .section-block-{{section.id}} .product--countdown {top: 0}   
        {%- endif -%}
        .section-block-{{section.id}} .product-countdown-block .clock-item {font-size: {{ font_size_countdown_text | append: 'px' }}}
        @media (max-width: 767px) {
            .section-block-{{section.id}} .product-countdown-block {margin-top: 0px;margin-left: 10px}
            .section-block-{{section.id}} .container:not(.container-full) .halo-block-header:not(.countdown_style_2) .product-countdown-block {margin-left: 0px}
            .section-block-{{section.id}} .halo-block-header:not(.countdown_style_2) .product-countdown-block {margin-top: 5px}
            .section-block-{{section.id}} .container:not(.container-full) .halo-block-header:not(.countdown_style_2).block-title--style2 .product-countdown-block,.section-block-{{section.id}} .container-full .halo-block-header:not(.countdown_style_2).block-title--style3 .product-countdown-block,.section-block-{{section.id}} .container-full .halo-block-header:not(.countdown_style_2).block-title--style4 .product-countdown-block{margin-top: 5px}
            .section-block-{{section.id}} .container:not(.container-full) .countdown_style_2 .product-countdown-block {padding-left: 0;padding-right: 0}
            .section-block-{{section.id}} .countdown_style_2 .product-countdown-block {margin-left: 0px}
            .section-block-{{section.id}} .container-full .title .text {padding-left: 10px !important;padding-right: 10px !important}
            .layout_rtl .section-block-{{section.id}} .container-full .title .text {padding-left: 0px !important;padding-right: 0px !important}
            .section-block-{{section.id}} .container-full .countdown_style_2.block-title--style2 .product-countdown-block {margin-left: 0px}
            .section-block-{{section.id}} .container-full .halo-block-header:not(.countdown_style_2) .product-countdown-block {margin-top: 0px}
            .section-block-{{section.id}} .container-full .countdown_style_2 .product-countdown-block {padding-left: 10px;padding-right: 10px}
            .section-block-{{section.id}} .container-full .countdown_style_2.block-title--style2 .product-countdown-block {padding: 10px;margin-left: 0}
            {%- unless section.settings.product_block_progress_bar -%}
                .section-block-{{section.id}} .container-full .view_all {margin-left: 10px}
                .section-block-{{section.id}} .container-full .title .text {padding-left: 10px !important;padding-right: 10px !important}
            {%- endunless -%}
            .layout_rtl .section-block-{{section.id}} .container-full .view_all {margin-left: 0;margin-right: 10px}
            .section-block-{{section.id}} .block-title--style2.enable_border_title_style2 .product-countdown-block {margin-top: 15px}
            .section-block-{{section.id}} .container-full .block-title--style3 .product-countdown-block {margin-top: 5px;padding-left: 10px;padding-right: 10px}
        }
    {%- endif -%}

    {%- if section.settings.style_block_header == 'style2' -%}
        .section-block-{{section.id}} .halo-block-header {margin-bottom: {{ mg_bottom_view | append: 'px' }}}
    {%- endif -%}

    {%- if show_banner -%}
        .section-block-{{section.id}} .product-block__cap--text {color: {{ color_text }};font-size: {{ fontsize_text | append: 'px' }};margin-bottom: {{ mg_bottom_text | append:'px' }}}
        .section-block-{{section.id}} .product-block__cap--subText {color: {{ color_sub_text }};font-size: {{ fontsize_sub_text | append: 'px' }};margin-top: 0;
            margin-bottom: {{ mg_bottom_sub_text | append:'px' }};line-height: {{ fontsize_sub_text | append: 'px' }}}
        .section-block-{{section.id}} .product-block__cap--description {color: {{ color_description }};font-size: {{ fontsize_description | append: 'px' }}}
        .section-block-{{section.id}} .product-block__cap--button a {color: {{ button_color }};background: {% if button_bg_color_gradient != blank %}{{ button_bg_color_gradient }}{% else %}{{ button_bg_color }}{% endif %};border: 1px solid {{ button_border_color }}}
        .section-block-{{section.id}} .product-block__cap--button a:hover {color: {{ button_color_hover }};background: {% if button_bg_color_gradient_hover != blank %}{{ button_bg_color_gradient_hover }}{% else %}{{ button_bg_color_hover }}{% endif %};border: 1px solid {{ button_border_color_hover }}}
        .product-block-has__banner .product-block__banner figure img,.product-block-has__banner .product-block__image,.product-block-has__banner .product-block__banner figure{border-radius: {{ banner_border_radius | append: 'px' }}}
        .product-block-has__banner .product-block__banner .video-open-popup a {position: absolute;top: 50%;left: 50%;transform: translate(-50%, -50%);z-index: 2;
            line-height: 0;padding: 10px 20px;border-radius: 5px;background: var(--bg_color);color: var(--color)}
        .product-block-has__banner .product-block__banner .video-open-popup.custom_position a {top: var(--top);left: var(--left)}
        .product-block-has__banner .product-block__banner .video-open-popup.icon_style_2 a {padding: 0}
        .product-block-has__banner .product-block__banner .video-open-popup svg {width: 85px;height: 85px;fill: currentColor;stroke: currentColor}
        .product-block-has__banner .product-block__banner .video-open-popup.icon_style_2 svg {width: 96px;height: 96px}
        @media (max-width: 1199px) {
            .section-block-{{section.id}} .product-block__cap--text {margin-bottom: 20px}
            .section-block-{{section.id}} .product-block__cap--subText {font-size: {{ fontsize_sub_text_mb | append: 'px' }};line-height: {{ fontsize_sub_text_mb | append: 'px' }};margin-bottom: 25px}
        }
        @media (max-width: 991px) {.product-block-has__banner .product-block__banner figure {max-width: 100% !important}}
        @media (max-width: 767px){
            .section-block-{{section.id}} .product-block__cap--text {font-size: {{ fontsize_text_mb | append: 'px' }}}
            .product-block__banner.pd--style2.not-img .product-block__cap--text{margin-bottom: 11px}
            .product-block__banner.pd--style2.not-img .product-block__cap--subText{margin-bottom: 15px}
        }
        @media (min-width: {{ settings.body_custom_width_size | plus:100 | append: 'px' }}) and (max-width: 1920px) {.body-custom-width .product-block-has__banner.has__banner--left .product-block__grid,.body-custom-width .product-block-has__banner.has__banner--right .product-block__grid {padding-right: 60px;padding-left: 60px}}
        @media (min-width: 1921px) {.body-custom-width .product-block-has__banner.has__banner--left .product-block__grid,.body-custom-width .product-block-has__banner.has__banner--right .product-block__grid {padding-right: 100px;padding-left: 100px}}
        @media (min-width: {{ settings.body_custom_width_size | append: 'px' }}) and (max-width: 1920px) {
            .body-custom-width .product-block-has__banner.has__banner--left .product-block__grid {padding-right: calc((100% - var(--body-custom-width-container) + 30px) / 2)}
            .body-custom-width .product-block-has__banner.has__banner--right .product-block__grid {padding-left: calc((100% - var(--body-custom-width-container) + 30px) / 2)}
        }
        @media (min-width: 1921px) {
            .body-custom-width .product-block-has__banner.has__banner--left .product-block__grid {padding-right: 6%}
            .body-custom-width .product-block-has__banner.has__banner--right .product-block__grid {padding-left: 6%}
        }
    {%- endif -%}

    {%- if section.settings.enable_layout_special -%}
        .section-block-{{section.id}} .product-item {background-color: {{ bg_card }};padding: {{ padding_card | append: 'px' }};border-radius: {{ border_radius_card | append: 'px' }};border{% unless section.settings.border_layout_card == 'full' %}-bottom{% endunless %}: {{ border_width_card | append: 'px' }} solid {{ border_color_card }}}
    {%- endif -%}

    {%- if infinite_scroll -%}
        .section-block-{{section.id}} .product-infinite-scroll {margin-top: {{ mg_bottom_button | append: 'px' }}}

        {%- if section.settings.enable_button_shadow -%}
        .section-block-{{section.id}} .product-infinite-scroll a {box-shadow: 0px 3px 8px 0px rgba(0, 0, 0, 0.08)}
        {%- endif -%}

        .section-block-{{section.id}} .product-infinite-scroll .button {background: {% if bg_color_gradient_button != blank %}{{ bg_color_gradient_button }}{% else %}{{ bg_color_button }}{% endif %};color: {{ color_button }};border: 1px solid {{ border_color_button }};padding-top: {{ pd_top_product_button | append: 'px' }};padding-bottom: {{ pd_bottom_product_button | append: 'px' }}}
        .section-block-{{section.id}} .product-infinite-scroll .button svg {fill: {{ color_button }}}
    {%- endif -%}

    {%- if section.settings.enable_border_title -%}
        .section-block-{{section.id}} .block-title--style2 {border-bottom: 1px solid {{ border_color_title }}}
        .section-block-{{section.id}} .block-title--style4 {border-top: 1px solid {{ border_color_title }};padding-top:  {{ pd_top_title | append: 'px'  }}}
    {%- endif -%}

    {%- if section.settings.view_all != blank -%}
        .section-block-{{section.id}} .halo-block-header{margin-bottom: {{ mg_bottom_title | append: 'px' }}}
    {%- else -%}
        {%- if countdown != blank -%}
            .section-block-{{section.id}} .halo-block-header{margin-bottom: {{ mg_bottom_title | append: 'px' }}}
        {%- else -%}
            .section-block-{{section.id}} .halo-block-header{margin-bottom: 0}
        {%- endif -%}
    {%- endif -%}

    {%- if product_bg_image != blank -%}
        .section-block-{{section.id}}{background: url({{ product_bg_image | img_url: '1920x' }});background-repeat: repeat-x;background-size: cover}
        .section-block-{{section.id}} .halo-block-header .title .text {background-color: transparent}
    {%- else -%}
        .section-block-{{section.id}},.section-block-{{section.id}} .halo-block-header .title .text {background: {% if product_bg_gradient != blank %}{{ product_bg_gradient }}{% else %}{{ product_bg }}{% endif %}}
    {%- endif -%}

    .product-block .halo-block {background-color: transparent}
    .section-block-{{section.id}} .halo-block-header .title {color: {{ color_title }};font-size: {{ fontsize_title | append: 'px'  }};
        {%- if section.settings.view_all != blank -%}
            {%- if section.settings.title_align == 'center' and section.settings.view_all_align == 'center' -%}
                margin-bottom: {{ mg_bottom_title | append: 'px' }};
            {%- else -%}
                margin-bottom: 0;
            {%- endif -%}
        {%- else -%}
            margin-bottom: {{ mg_bottom_title | append: 'px' }};
        {%- endif -%}
        {%- if section.settings.product_block_progress_bar -%}
            line-height: 1;
        {%- endif -%}
    }
    .section-block-{{section.id}} .halo-block-header .title svg {fill: {{ color_title }}}
    .section-block-{{section.id}} .halo-block-header .title:before {background-color: {{ border_color_title }};
        {%- unless section.settings.enable_border_title -%}
            display: none;
        {%- endunless -%}
    }

    {%- if section.settings.enable_border_title_style2 -%}
        .section-block-{{section.id}} .block-title--style2 .title {padding-bottom: {{ mg_bottom_title | append: 'px' }}}
    {%- elsif layout == 'scroll' -%} 
        .section-block-{{section.id}} .block-title--style2 .title {padding-bottom: 0px}
    {%- else -%}
        .section-block-{{section.id}} .block-title--style2 .title {padding-bottom: 20px}
    {%- endif -%}
    {%- if section.settings.product_block_progress_bar -%}
        .section-block-{{section.id}} .block-title--style2 .title {padding-bottom: 0px}
    {%- endif -%}
    {%- if section.settings.product_block_counter_number -%}
        .section-block-{{section.id}} .products-carousel .slick-next {display: flex;flex-direction: column;}
        .slick-next .products-counter-number .counter {font-size: calc(var(--font-body-size) - 2px)}
        .products-counter-number .counter {font-size: 0}
    {%- endif -%}

    .section-block-{{section.id}} .block-title--style4 .title:before {content:  none}
    .section-block-{{section.id}} .block-title--style2:has(.view-all) {padding-left: 0;padding-right: 0}
    .halo-block-header.text-center.block-title--style2.viewAll--center .view-all {position: static !important}
    .section-block-{{section.id}} .halo-block-header .view_all {color: {{color_view_all}};font-weight: {{ font_weight_view_all }};margin-bottom: {{ mg_bottom_view | append: 'px' }} !important;
        {%- unless section.settings.enable_border_view_all -%}
            border: 0;
        {%- endunless -%}
        {%- if section.settings.view_all != blank -%}
            {%- if section.settings.title_align == 'left' and section.settings.view_all_align == 'left'-%}
                position: relative;top: -5px
            {%- endif -%}
        {%- endif -%}
        {%- if section.settings.product_block_progress_bar -%}
            line-height: 28px;
            top: 0;
        {%- endif -%}
    }

    .section-block-{{section.id}} .halo-block-header .view_all svg {color: {{color_view_all_icon}};fill: {{color_view_all_icon}}}
    .product-block-has__banner .product-block__banner .product-block__cap.custom_position {width: max-content}
    .section-block-{{section.id}} .product-infinite-scroll .button{font-size: {{ button_text_font_size | append: 'px' }};font-weight:  {{ button_text_font_weight }};text-transform: {{ button_text_text_transform }}}
    /* Block Categories */
    .section-block-{{section.id}} .product-block__collection--list{background: {% if collection_bg_color_gradient != blank %}{{ collection_bg_color_gradient }}{% else %}{{ collection_bg_color }}{% endif %}}
    .section-block-{{section.id}} .product-block__collection--list_info h5,.section-block-{{section.id}} .product-block__collection--list_info a,.section-block-{{section.id}} .product-block__collection--list a{color: {{ collection_color }}}
